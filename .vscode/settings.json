{
    "files.watcherExclude": {
        "hdl/*/work/**": true,
        "linux/*/build/**": true
    },
    "C_Cpp.default.configurationProvider": "ms-vscode.makefile-tools",
    "verilog.linting.linter": "iverilog",
    "verilog.linting.iverilog.includePath": [
        "${workspaceRoot}/hdl/src/led_driver"
    ],
    "verilog.linting.verilator.includePath": [
        "hdl/src/**"
    ],
    "verilog.ctags.path": "/usr/bin/ctags",
    "files.associations": {
        "*.lwr": "yaml",
        "*.profile": "yaml",
        "*.ctrl": "spice",
        "*.spice": "spice",
        "uio_helper.h": "c",
        "stdint.h": "c",
        "string.h": "c",
        "stat.h": "c",
        "types.h": "c"
    },
    "verilog.languageServer.veribleVerilogLs.enabled": true,
    "verilog.formatting.veribleVerilogFormatter.arguments": "",
    "verilog.languageServer.veribleVerilogLs.path": "verible-verilog-ls",
}